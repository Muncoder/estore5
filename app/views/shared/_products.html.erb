<% @products.each_slice(3) do |products| %>
	<div class="row">
		<% products.each do |product| %>
			<div class="col-md-4">
				<div class="well">
					<h2><%= product.name %></h2>
					<p><%= product.description %></p>
					<hr>
					<%= product.price %>
					<hr>
					<%= link_to "Show", product_path(product), class: "btn btn-info btn-xs"  %>
					<%= link_to "Edit", edit_product_path(product), class: "btn btn-info btn-xs"  %>
					<%= link_to "Delete", product_path(product), method: :delete, data: { confirm: "Sure to Delete?"}, class: "btn btn-danger btn-xs"  %>
				</div>
			</div>
		<% end %>
	</div>
<% end %>
