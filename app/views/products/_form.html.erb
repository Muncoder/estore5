<%= form_for(@product) do |f| %>
	
	<% if @product.errors.any? %>
		<ul>
		<% @product.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	<% end %>

	<div class="form-grop">
		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control" %>
	</div>

	<div class="form-grop">
		<%= f.label :image %>
		<%= f.file_field :image, class: "form-control" %>
	</div>

	<div class="form-grop">
		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control" %>
	</div>

	<div class="form-grop">
		<%= f.label :price %>
		<%= f.text_field :price, class: "form-control" %>
	</div>
	<br>
	<% if params[:action] == "new" %>
		<%= f.submit "Create Product", class: "btn btn-default"  %>	
	<% else %>
		<%= f.submit "Update Product", class: "btn btn-default"  %>	
	<% end %>

	
<% end %>
